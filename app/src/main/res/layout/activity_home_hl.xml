<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">


    <RadioGroup
        android:id="@+id/title_layout_hl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_title_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">


        <RadioButton
            android:id="@+id/title_vowel_hl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_title_height"
            android:layout_weight="1"
            android:gravity="center"
            android:checked="false"
            android:text="@string/vowel_name_hl" />

        <RadioButton
            android:id="@+id/title_consonant_hl"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/activity_title_height"
            android:text="@string/consonant_name_hl"
            android:checked="false" />
    </RadioGroup>

    <GridView
        android:id="@+id/gridView_home_hl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:scrollbars="none"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="10dp"
        android:cacheColorHint="#00000000"
        android:layout_below="@+id/title_layout_hl"
        />


</RelativeLayout>
